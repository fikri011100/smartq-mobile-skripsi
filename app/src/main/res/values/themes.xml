<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Smartq" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_second</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:button">@drawable/bg_button</item>
    </style>
    <!-- Set parent theme as app theme. -->
    <style name="fullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="textView" parent="Theme.Smartq">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>
    <style name="bottomNav" parent="Theme.Smartq">
        <item name="android:windowBackground">@color/bg_button</item>
    </style>
    <style name="splash" parent="Theme.Smartq">
        <item name="android:background">@color/blue_primary</item>
    </style>
    <style name="homeBackground" parent="Theme.Smartq">
        <item name="android:background">@drawable/view_home</item>
    </style>
    <style name="start" parent="Theme.Smartq">
        <item name="android:background">@drawable/bg_start</item>
    </style>
    <style name="button" parent="Theme.Smartq">
        <item name="backgroundTint">@color/blue_second</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="buttonDanger" parent="Theme.Smartq">
        <item name="backgroundTint">@color/danger</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="buttonWhite" parent="Theme.Smartq">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/danger</item>
    </style>
    <style name="background1" parent="Theme.Smartq">
        <item name="android:background">@color/blue_primary</item>
    </style>
    <style name="button1" parent="Theme.Smartq">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue_primary</item>
    </style>
    <style name="cardBackground" parent="Theme.Smartq">
        <item name="cardBackgroundColor">@color/blue_second</item>
    </style>
    <style name="cardBackground1" parent="Theme.Smartq">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>