<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/fullScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".revamp.ui.auth.intro.IntroFragment">

    <ImageView
        android:id="@+id/img_bg_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg_intro"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/icon_intro_two"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <TextView
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngantri Lebih Mudah"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanist_bold"/>

    <TextView
        android:id="@+id/text_secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ngantri gak perlu susah-susah datang awal biar dapet antrian"
        app:layout_constraintTop_toBottomOf="@+id/text_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanist_medium"/>

    <ImageView
        android:id="@+id/floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_button_intro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>